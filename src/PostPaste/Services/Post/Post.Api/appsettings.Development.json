{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ]
  },
  "ConnectionStrings": {
    "Postgres": "Host=localhost;Port=5432;Database=posts_db;Username=postgres;Password=SuperPassword"
  },
  "ApplicationInsights": {
    "ConnectionString": "*"
  },
  "AzureStorage": {
    "ConnectionString": "*",
    "PostsContainerName": "posts"
  },
  "JwtToken": {
    "Key": "134AABE3-92EF-45CB-B33B-03E9D52601F0",
    "ExpiresIn": 3600
  },
  "EmailUrls": {
    "EmailConfirmationBaseUrl": "http://localhost:5033/auth/confirm-email",
    "LoginBaseUrl": "http://localhost:5033/auth/login"
  },
  "Email": {
    "SenderEmail": "postpaste-dev@noreply.com",
    "Sender": "PostPaste",
    "Host": "localhost",
    "Port": 2525
  },
  "PasswordHashing": {
    "MemorySizeKb": 65536,
    "Iterations": 3,
    "DegreeOfParallelism": 1,
    "HashLength": 32,
    "SaltLength": 16
  }
}
